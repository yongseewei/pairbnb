<div id="clearance" class="sign-up">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading ">
          <h2 class="text-center"><%= t(".title") %></h2> 
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <%= link_to  "/auth/facebook", class: "btn btn-primary btn-block btn-social btn-facebook" do %>
                <span class="fa fa-facebook"></span>Connect With Facebook
              <% end %>
            </div>
          </div> 
          <hr size="3" noshade>
          <%= form_for @user do |form| %>
            <%= render partial: '/users/form', object: form %>

            <div class="form-actions">
              <%= form.button "Sign Up", class: "btn btn-primary"  %>
            </div>


              
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
